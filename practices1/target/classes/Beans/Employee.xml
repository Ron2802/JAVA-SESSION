<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean class="Pojo.Client" id="c">
	<constructor-arg name="id" value="1" type="int"></constructor-arg>
	<constructor-arg name="name" value="Ronak"></constructor-arg>
	<constructor-arg name="email" value="Ronak@gmail.com"></constructor-arg>
	</bean>
	
	<bean class="Pojo.Test" id="T">
	<property name="Id" value="101"/>
	<property name="Name" value="Krupa"/>
	<property name="Email" value="Krupa@gmail.com"/>
	<property name="Salary" value="25000"/>
	</bean>
	
   </beans>